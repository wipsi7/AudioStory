<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_listen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fi.metropolia.audiostory.activities.ListenActivity">


    <ListView
        android:id="@+id/listening_listview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <com.wang.avi.AVLoadingIndicatorView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listening_avi_loading_list"
        style="@style/AVLoadingIndicatorView"
        android:visibility="visible"
        app:indicatorColor="@color/colorAccent"
        app:indicatorName="BallPulseIndicator"
        app:layout_constraintBottom_toBottomOf="@+id/listening_listview"
        app:layout_constraintRight_toRightOf="@+id/listening_listview"
        app:layout_constraintTop_toTopOf="@+id/listening_listview"
        app:layout_constraintLeft_toLeftOf="@+id/listening_listview" />
</android.support.constraint.ConstraintLayout>

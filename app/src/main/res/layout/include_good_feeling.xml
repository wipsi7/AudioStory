<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="9dp"
    android:paddingEnd="9dp"

    android:id="@+id/good_feelings">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:id="@+id/good_feeling_row_1"
        android:tag="good_feeling_row_1"
        android:weightSum="3">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="3dp"

            android:src="@drawable/interest_button"
            android:contentDescription="@string/desc_interest"
            android:clickable="true"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:tag="Interest"
            android:onClick="onFeelingClick"/>


        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="3dp"

            android:src="@drawable/attraction_button"
            android:contentDescription="@string/desc_attraction"
            android:clickable="true"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:tag="Attraction"
            android:onClick="onFeelingClick"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="3dp"

            android:src="@drawable/surprise_button"
            android:contentDescription="@string/desc_surprise"
            android:clickable="true"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:tag="Surprise"
            android:onClick="onFeelingClick"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:id="@+id/good_feeling_row_2"
        android:tag="good_feeling_row_2"
        android:weightSum="3">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="3dp"

            android:src="@drawable/hope_button"
            android:contentDescription="@string/desc_hope"
            android:clickable="true"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:tag="Hope"
            android:onClick="onFeelingClick"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="3dp"

            android:src="@drawable/gratitude_button"
            android:contentDescription="@string/desc_gratitude"
            android:clickable="true"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:tag="Gratitude"
            android:onClick="onFeelingClick"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="3dp"

            android:src="@drawable/joy_button"
            android:contentDescription="@string/desc_joy"
            android:clickable="true"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:tag="Joy"
            android:onClick="onFeelingClick"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:id="@+id/good_feeling_row_3"
        android:tag="good_feeling_row_3"
        android:weightSum="3">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="3dp"

            android:src="@drawable/relief_button"
            android:contentDescription="@string/desc_relief"
            android:clickable="true"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:tag="Relief"
            android:onClick="onFeelingClick"/>


        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="3dp"

            android:src="@drawable/pride_button"
            android:contentDescription="@string/desc_pride"
            android:clickable="true"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:tag="Pride"
            android:onClick="onFeelingClick"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="3dp"

            android:src="@drawable/love_button"
            android:contentDescription="@string/desc_love"
            android:clickable="true"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:tag="Love"
            android:onClick="onFeelingClick"/>
    </LinearLayout>
</LinearLayout>